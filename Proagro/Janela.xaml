<Window x:Class="Proagro.Janela"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proagro"
        mc:Ignorable="d"
        Title="Janela" Height="500" Width="700" Loaded="Window_Loaded" WindowState="Maximized">
    <StackPanel>
        <Menu x:Name="menu" VerticalAlignment="Top">
            <MenuItem Header="_Cadastro">
                <MenuItem x:Name="miCadastroPedido" Header="_Pedido" Click="miCadastroPedido_Click" />
                <MenuItem x:Name="miCadastroPessoa" Header="_Pessoa" Click="miCadastroPessoa_Click" />
                <MenuItem x:Name="miCadastroProduto" Header="_Produto" />
            </MenuItem>
        </Menu>
        <Grid x:Name="GridPrincipal" Margin="0,15,0,0"/>

    </StackPanel>
</Window>
